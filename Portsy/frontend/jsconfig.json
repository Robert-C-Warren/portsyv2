{
  "compilerOptions": {
    "moduleResolution": "bundler",
    "target": "ES2020",
    "module": "ESNext",
    "resolveJsonModule": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "checkJs": false,
    "paths": {"@/*": ["src/*"]}
  },
  "include": ["src/**/*", "src/**/*.js", "src/**/*.svelte"],
  "exclude": ["node_modules", "wailsjs", "dist"]
}
